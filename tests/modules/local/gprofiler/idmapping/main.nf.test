nextflow_process {

    name "Test Process GPROFILER_IDMAPPING"
    script "modules/local/gprofiler/idmapping/main.nf"
    process "GPROFILER_IDMAPPING"
    tag "idmapping"
    tag "module"

    test("Map Ensembl IDs to themselves") {

        when {
            process {
                """
                meta = []
                count_file = file("$projectDir/tests/input/idmapping/counts.ensembl_ids.csv")
                input[0] = [meta, count_file, "Solanum tuberosum"]
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out.csv).match()
        }

    }

    test("Map NCBI IDs") {

        when {
            process {
                """
                meta = []
                count_file = file("$projectDir/tests/input/idmapping/counts.ncbi_ids.csv")
                input[0] = [meta, count_file, "Arabidopsis thaliana"]
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out.csv).match()
        }

    }


    test("Map Uniprot IDs") {

        when {
            process {
                """
                meta = []
                count_file = file("$projectDir/tests/input/idmapping/counts.uniprot_ids.csv")
                input[0] = [meta, count_file, "Arabidopsis thaliana"]
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out.csv).match()
        }

    }

    test("Empty count file") {

        tag "idmapping_empty"

        when {
            process {
                """
                meta = []
                count_file = file("$projectDir/tests/input/idmapping/counts.empty.csv")
                input[0] = [meta, count_file, "Arabidopsis thaliana"]
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out.csv).match()
        }

    }

}
