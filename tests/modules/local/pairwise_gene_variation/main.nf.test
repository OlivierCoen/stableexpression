nextflow_process {

    name "Test Process PAIRWISE_GENE_VARIATION"
    script "modules/local/pairwise_gene_variation/main.nf"
    process "PAIRWISE_GENE_VARIATION"
    tag "pairwisegenevariation"
    tag "module"

    test("Should run without failures") {

        when {
            process {
                """
                ch_counts = Channel.fromPath( '$projectDir/tests/data/merge_counts/output/all_counts.parquet', checkIfExists: true)
                input[0] = ch_counts
                """
            }
        }

        then {
            println(process.out)
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
