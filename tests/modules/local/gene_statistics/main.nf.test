nextflow_process {

    name "Test Process GENE_STATISTICS"
    script "modules/local/gene_statistics/main.nf"
    process "GENE_STATISTICS"
    tag "genestats"
    tag "module"

    test("Without variation data") {

        when {

            process {
                """
                ch_counts = Channel.fromPath( '$projectDir/tests/data/merge_counts/output/all_counts.parquet', checkIfExists: true).collect()
                ch_metadata = Channel.fromPath( '$projectDir/tests/data/gene_statistics/metadata*.csv', checkIfExists: true ).collect()
                ch_mapping = Channel.fromPath( '$projectDir/tests/data/gene_statistics/mapping*.csv', checkIfExists: true ).collect()
                ch_m_measures = Channel.fromList( [] ).collect()
                input[0] = ch_counts
                input[1] = ch_metadata
                input[2] = ch_mapping
                input[3] = ch_m_measures
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

    test("With m-measures") {

        when {

            process {
                """
                ch_counts = Channel.fromPath( '$projectDir/tests/data/merge_counts/output/all_counts.parquet', checkIfExists: true).collect()
                ch_metadata = Channel.fromPath( '$projectDir/tests/data/gene_statistics/metadata*.csv', checkIfExists: true ).collect()
                ch_mapping = Channel.fromPath( '$projectDir/tests/data/gene_statistics/mapping*.csv', checkIfExists: true ).collect()
                ch_m_measures = Channel.fromPath( '$projectDir/tests/data/pairwise_gene_variation/output/m_measures.csv', checkIfExists: true ).collect()
                input[0] = ch_counts
                input[1] = ch_metadata
                input[2] = ch_mapping
                input[3] = ch_m_measures
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
