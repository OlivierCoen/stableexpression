nextflow_process {

    name "Test Process GENE_STATISTICS"
    script "modules/local/gene_statistics/main.nf"
    process "GENE_STATISTICS"
    tag "genestats"
    tag "module"

    test("Small dataset") {

        when {

            process {
                """
                ch_counts = Channel.fromPath( '$projectDir/tests/input/gene_statistics/counts*.csv', checkIfExists: true).collect()
                ch_metadata = Channel.fromPath( '$projectDir/tests/input/gene_statistics/metadata*.csv', checkIfExists: true ).collect()
                ch_mapping = Channel.fromPath( '$projectDir/tests/input/gene_statistics/mapping*.csv', checkIfExists: true ).collect()
                input[0] = ch_counts
                input[1] = ch_metadata
                input[2] = ch_mapping
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
