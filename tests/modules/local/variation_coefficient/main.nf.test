nextflow_process {

    name "Test Process VARIATION_COEFFICIENT"
    script "modules/local/variation_coefficient/main.nf"
    process "VARIATION_COEFFICIENT"
    tag "var_coeff"
    tag "module"

    test("Should run without failures") {

        when {

            process {
                """
                ch_renamed_files = Channel.fromPath( '$baseDir/tests/input/variation_coefficient/*_renamed.csv', checkIfExists: true)
                ch_metadata_files = Channel.fromPath( '$baseDir/tests/input/variation_coefficient/*_metadata.csv', checkIfExists: true)
                ch_mapping_files = Channel.fromPath( '$baseDir/tests/input/variation_coefficient/*_mapping.csv', checkIfExists: true)
                input[0] = ch_renamed_files.collect()
                input[1] = ch_metadata_files.collect()
                input[2] = ch_mapping_files.collect()
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
