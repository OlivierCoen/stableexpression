nextflow_process {

    name "Test Process VARIATION_COEFFICIENT"
    script "modules/local/variation_coefficient/main.nf"
    process "VARIATION_COEFFICIENT"
    tag "varcoeff"
    tag "module"

    test("Should run without failures") {

        when {

            process {
                """
                ch_counts = Channel.fromPath( '$projectDir/tests/input/variation_coefficient/counts*.csv', checkIfExists: true).collect()
                ch_metadata = Channel.fromPath( '$projectDir/tests/input/variation_coefficient/metadata*.csv', checkIfExists: true ).collect()
                ch_mapping = Channel.fromPath( '$projectDir/tests/input/variation_coefficient/mapping*.csv', checkIfExists: true ).collect()
                input[0] = ch_counts
                input[1] = ch_metadata
                input[2] = ch_mapping
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
