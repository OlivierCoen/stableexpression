nextflow_process {

    name "Test Process VARIATION_COEFFICIENT"
    script "modules/local/variation_coefficient/main.nf"
    process "VARIATION_COEFFICIENT"
    tag "varcoeff"
    tag "module"

    test("Should run without failures") {

        when {

            process {
                """
                input[0] = file( '$projectDir/tests/input/variation_coefficient/counts.csv', checkIfExists: true )
                input[1] = file( '$projectDir/tests/input/variation_coefficient/metadata.csv', checkIfExists: true )
                input[2] = file( '$projectDir/tests/input/variation_coefficient/mapping.csv', checkIfExists: true )
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
