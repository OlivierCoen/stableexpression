nextflow_process {

    name "Test Process MERGE_COUNTS"
    script "modules/local/merge_counts/main.nf"
    process "MERGE_COUNTS"
    tag "merge"
    tag "module"

    test("Should run without failures") {

        when {
            process {
                """
                input[0] = file('$projectDir/tests/input/merge_counts/counts1.csv')
                input[1] = file('$projectDir/tests/input/merge_counts/counts2.csv')
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
            with(process.out.merged) {
                assert path(get(0)).readLines().size() == 6
            }
        }

    }

}
