nextflow_process {

    name "Test Process QUANTILE_NORMALISE"
    script "modules/local/quantile_normalisation/main.nf"
    process "QUANTILE_NORMALISE"
    tag "quant_norm"
    tag "module"

    test("Should run without failures") {

        when {
            process {
                """
                meta = [dataset: 'test']
                count_file = file( '$projectDir/tests/test_data/quantile_normalise/count.raw.cpm.csv', checkIfExists: true)
                input[0] = [meta, count_file]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
