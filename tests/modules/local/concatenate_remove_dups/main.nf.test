nextflow_process {

    name "Test Process CONCATENATE_REMOVE_DUPS"
    script "modules/local/concatenate_remove_dups/main.nf"
    process "CONCATENATE_REMOVE_DUPS"
    tag "concat"
    tag "module"

    test("Concat metadata files") {

        when {

            process {
                """
                input[0] = file('$projectDir/tests/input/concatenate_remove_dups/metadata1.csv')
                input[1] = file('$projectDir/tests/input/concatenate_remove_dups/metadata2.csv')
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
            with(process.out.merged) {
                assert path(get(0)).readLines().size() == 5
            }

        }

    }

    test("Concat mapping files") {

        when {

            process {
                """
                input[0] = file('$projectDir/tests/input/concatenate_remove_dups/mapping1.csv')
                input[1] = file('$projectDir/tests/input/concatenate_remove_dups/mapping2.csv')
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
            with(process.out.merged) {
                assert path(get(0)).readLines().size() == 5
            }

        }

    }

}
